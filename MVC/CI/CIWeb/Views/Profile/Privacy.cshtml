      <script>

          // load sidebar slug
          function loadSidebar(response) {
              return response.result.map(item => `<div class="d-flex"><a class="list-group-item list-group-item-action" href="#${item.slug}">${item.title}</a>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
