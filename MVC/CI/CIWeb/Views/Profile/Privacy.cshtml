                                                </svg>
                                                </div><hr/>`).join("");
          }

          //load main content
          function loadDesc(response) {
              return response.result.map(item => `<h4 id="${item.slug}">${item.title}</h4>
                                                    <div class="mt-3 mb-5">
                                                       ${item.description}
                                                    </div>
                                                  <hr/>`).join("");
          }

          // to load data from CMS-Table
          $.ajax({
                type: "GET",
                url: `/api/privacy`,
                processData: false,
                success: function (response) {

                    console.log(response);

                    var sidebar = document.getElementById('list-example');
                    sidebar.innerHTML = loadSidebar(response);
                    
                    var Main = document.getElementById('list-desc-privacy');
                    Main.innerHTML = loadDesc(response);

                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
             });
         
